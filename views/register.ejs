<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-800 bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1505909182942-e2f09aee3e89?q=80&w=2072&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center">
  <div class="w-full h-screen flex items-center justify-center">
    <div class="w-[25vw] h-[70vh] bg-white px-4 py-5 rounded-md">
      <h1 class="text-4xl text-center mb-5 font-semibold text-zinc-700 tracking-tighter capitalize leading-none ">Create New Account</h1>
      <form action="/register" method="post">
        <input type="text" class="block mt-2 w-full px-3 py-2 border-2 rounded-md" name="fullname" placeholder="fullname">
        <input type="text" class="block mt-2 w-full px-3 py-2 border-2 rounded-md" name="username" placeholder="username">
        <input type="email" class="block mt-2 w-full px-3 py-2 border-2 rounded-md" name="email" placeholder="email">
        <input type="number" class="block mt-2 w-full px-3 py-2 border-2 rounded-md" name="contact" placeholder="contact">
        <input type="password" class="block mt-2 w-full px-3 py-2 border-2 rounded-md" name="password" placeholder="password">
        <input type="submit" class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-5 text-center w-3/4 mx-auto">By continuing, you agree to Pintrest's Terms of Service, Opens a new tab and acknowledge that you've read our Privacy Policy Notice or collection</p>
      </form>
      <a class="inline-block mt-5 text-sm font-semibold text-center w-full" href="/">Login existing account?</a>
    </div>
  </div>
</div>
<% include ./partials/footer.ejs %>